{
  "env": {
    "browser": true,
    "es2020": true,
    "commonjs": true,
    "node": true,
    "jest/globals": true
  },
  "globals": {
    "require": true,
    "module": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["babel", "jest", "react"],
  "rules": {},
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
